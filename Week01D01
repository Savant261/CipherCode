1. Concatenating two strings:

#include <iostream>
using namespace std;

int main()
{
    string s, s1, conc;
    cout << "Enter the first string: ";
    getline(cin, s);
    cout << "Enter the second string: ";
    getline(cin, s1);
    conc = s + s1;
    cout << "Concatenated string: " << conc << endl;
    return 0;
}

2. Finding average of grades

#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
   int arr[5];
   for(int i = 0; i < 5; i++)
   {
       cout << "Enter grade " << i + 1 << ": ";
       cin >> arr[i];
   }
   int sum = 0;
   for(int i = 0; i < 5; i++)
   {
       sum += arr[i];
   }

   float avg = sum / 5.0;
   cout << "The average grade is: " << fixed << setprecision(1) << avg << endl;
   return 0;
}

3. Finding the square of a number

#include <iostream>
using namespace std;

int main()
{
   int n;
   cout << "Enter a number: ";
   cin >> n;
   cout << "The square of " << n << " is: " << n*n << endl;
   return 0;
}
