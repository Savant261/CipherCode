1.
#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter the size of the array: ";
    cin >> n;
    int arr[n];
    cout << "Enter the array: "; 
    for(int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    int sum = 0;
    for(int i = 0; i < n; i++)
    {
        sum += arr[i];
    }
    cout << "Sum of the array: " << sum;
}

2.
#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter the size of the array: ";
    cin >> n;
    int arr[n];
    cout << "Enter the array: ";
    for(int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    int sume = 0, sumo = 0;
     for(int i = 0; i < n; i++)
     {
         if(arr[i] % 2 == 0)
         {
             sume += arr[i];
         }
         else
         {
             sumo += arr[i];
         }
     }
     cout << "Sum of odd numbers: " << sumo << endl;
     cout << "Sum of even numbers: " << sume;
     return 0;
     
}

3.
#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter the size of the array: ";
    cin >> n;
    int arr[n];
    cout << "Enter the array: ";
    for(int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    int en=0, on=0;
     for(int i = 0; i < n; i++)
     {
         if(arr[i] % 2 == 0)
         {
             ++en;
         }
         else
         {
             ++on;
         }
     }
     cout << "Number of odd numbers: " << on << endl;
     cout << "Number of even numbers: " << en;
     return 0;

}
